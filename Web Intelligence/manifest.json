{
  "manifest_version": 3,
  "name": "Cortex AI",
  "version": "1.0.0",
  "description": "Enterprise-grade AI intelligence platform. Transform any content into actionable insights with advanced AI analysis.",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.github.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Open Cortex AI",
    "default_icon": {
      "16": "data:image/svg+xml;base64,"
    }
  },
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Toggle Cortex AI Side Panel"
    }
  }
}

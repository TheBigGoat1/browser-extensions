{
  "manifest_version": 3,
  "name": "Scrape Orange",
  "version": "2.2.0",
  "description": "Professional web scraping tool with visual selector and sitemap-based extraction",
  
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "alarms"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "visual-selector.js",
        "selector-engine.js",
        "intelligent-scraper.js",
        "smart-waiter.js",
        "data-validator.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "action": {
    "default_title": "Scrape Orange - Open Side Panel",
    "default_icon": {
      "16": "orange-logo.png",
      "48": "orange-logo.png",
      "128": "orange-logo.png"
    }
  },
  
  "icons": {
    "16": "orange-logo.png",
    "48": "orange-logo.png",
    "128": "orange-logo.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
